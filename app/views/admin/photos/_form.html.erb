<%= form_for [:admin, @photo] do |f| %>
  <%= render :partial => "/shared/admin/error_messages",
             :locals => {
               :object => @photo,
               :include_object_name => true
             } %>

  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name, :class => "larger widest" %>
  </div>

    <div class='field'>
        <%= f.label :gallery_name %>
        <%= f.text_field :gallery_name, :class => "larger widest" %>
    </div>

  <div class='field'>
    <%= f.label :image %>
    <%= render :partial => "/shared/admin/image_picker", :locals => {:f => f, :field => :image_id, :image => @photo.image } %>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
             :locals => {
               :f => f,
               :continue_editing => true,
               :delete_title => t('admin.photos.photo.delete'),
               :delete_confirmation => t('shared.admin.delete.message', :title => @photo.name)
             } %>

<% end %>
