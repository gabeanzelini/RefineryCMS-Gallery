<% content_for :body_content_title, @gallery_name %>
<% content_for :body_content_left do %>
  <article class="photo">
      <% if @photos.count > 0 %>
      <div class="galleria" style="width: 700px; height: 400px; background: #000000;">
          <% for photo in @photos %>
              <img src="<%= photo.image.url %>" data-title="<%= photo.title %>">
          <% end %>
      </div>
          <%= javascript_include_tag 'galleria-1.4.2.min.js' %>
          <script>
            Galleria.loadTheme('/javascripts/galleria/themes/classic/galleria.classic.min.js');
            Galleria.run('.galleria');
          </script>
      <% end %>
    <p>
      <%= link_to t('.back_to_index'), photos_url %>
    </p>
  </article>
<% end %>

<%= render :partial => "/shared/content_page" %>
